<%= render ('layouts/header') %>

<section>

<div id="wrapper">


    <%= image_tag @kid.avatar.url(:medium) %>


</div>
  <h1> <%= @kid.name %>  </h2>
  <hr style="color:#efefef">

  <p> Email: <%= @kid.email %></p>
  <p> Grade: <%= @kid.grade %></p>
  <p> Classroom: <%= @kid.classroom %></p>
  <p> DOB: <%= @kid.dob %></p>
  <p> Address:<br>
      <%= @kid.address %><br>
      <%= @kid.apt %><br>
      <%= @kid.city %><br>
      <%= @kid.state %><br>
      <%= @kid.zip %></p>
  <p> Home Phone: <%= @kid.home_phone %></p>
  <p> Work Phone: <%= @kid.work_phone %></p>
  <p> Parent: <%= @kid.parent %></p>
  <p> Allowed to Pickup: <%= @kid.pickup %></p>
  <p> Allergies: <%= @kid.allergies %></p>
</div>


<button><%= link_to 'Edit', edit_kid_path(@kid) %></button>
<button><%= link_to 'Back', user_path(@user) %></button>
<button><%= link_to 'Remove', @kid, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn-danger'%></button>

</section><br><br>


<%= render ('layouts/footer') %>
